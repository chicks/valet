</head>

<body>
  <div id="container">
    <div id="header">
    </div>
    <div id="body">
      <div id="main">
        <%= yield %>
      </div>
    </div>
  </div>

  <div id="footer">
    <ul>
      <li>
        <%= link_to('Home', root_path) %>
      </li>
      <li>
        <%= link_to('About Us', 'http://www.rackrobot.com') %>
      </li>
    </ul>
  </div>
</body>

</html>
